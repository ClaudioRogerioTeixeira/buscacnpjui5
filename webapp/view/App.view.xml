<mvc:View
	controllerName="buscacnpj.ui5.controller.App"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
	xmlns="sap.m"	
  xmlns:html="http://www.w3.org/1999/xhtml"
  displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>

<App id="app">
    <Page showHeader="false" title="{i18n>title}" backgroundDesign="Transparent">

        <Panel class="sapUiResponsiveMargin" accessibleRole="Region">
            <content>
              <Image src="./assets/top.png" width="100%" height="auto" />				
            </content>		
        </Panel>        
        
        <html:div class="container">
          <FlexBox      
            direction="Column"       
            alignItems="Center"
          >
            <Image src="./assets/empresas.svg" width="80%" height="auto"/>
            <Text class="text" text="Consulte o CNPJ de Empresas"/>
          </FlexBox>

          <FlexBox      
            direction="Row"       
				    justifyContent="Center"
          >
            <Input class="input" id="inputCnpj" placeholder="Digite o CNPJ da empresa" showValueHelp="true" valueHelpRequest=".onValueHelpRequest"  tooltip="Digite o CNPJ da empresa" />
            <Button id="botao" icon="sap-icon://search" press=".consultaCnpj" tooltip="Consultar o CNPJ"/>
          </FlexBox>         
          
        </html:div>   

        <IconTabBar
        id="idIconTabBarNoIcons"
        class="sapUiResponsiveContentPadding sapUiLargeMarginTop sapUiLargeMarginBottom"     
        >
        <items>
          
          <IconTabFilter text="Dados Principais" key="dados" iconColor="Critical">
            <List headerText="Dados Principais do CNPJ" >
              <InputListItem label="Abertura:" type="Navigation">
                <Text text="{data>/abertura}"/>
              </InputListItem>
              <InputListItem label="Status:" type="Navigation">
                <Text text="{data>/status}"/>
              </InputListItem>
              <InputListItem label="CNPJ:" type="Navigation">
                <Text text="{data>/cnpj}"/>
              </InputListItem>
              <InputListItem label="Nome:" type="Navigation">
                <Text text="{data>/nome}"/>
              </InputListItem>
              <InputListItem label="Natureza Jurídica:" type="Navigation">
                <Text text="{data>/natureza_juridica}"/>
              </InputListItem>              
              <InputListItem label="Fantasia:" type="Navigation">
                <Text text="{data>/fantasia}"/>
              </InputListItem>              
              <InputListItem label="Capital Social:" type="Navigation">
                <Text text="{data>/capital_social}"/>
              </InputListItem>
              <InputListItem label="Data Situação:" type="Navigation">
                <Text text="{data>/data_situacao}"/>
              </InputListItem>
              <InputListItem label="Situação:" type="Navigation">
                <Text text="{data>/situacao}"/>
              </InputListItem>
              <InputListItem label="Situação Especial:" type="Navigation">
                <Text text="{data>/situacao_especial}"/>
              </InputListItem>
              <InputListItem label="Motivo Situação:" type="Navigation">
                <Text text="{data>/motivo_situacao}"/>
              </InputListItem>                                        
              <InputListItem label="EFR:" type="Navigation">
                <Text text="{data>/efr}"/>
              </InputListItem>
              <InputListItem label="Porte:" type="Navigation">
                <Text text="{data>/porte}"/>
              </InputListItem>
              <InputListItem label="Tipo:" type="Navigation">
                <Text text="{data>/tipo}"/>
              </InputListItem>
              <InputListItem label="Última Atualização:" type="Navigation">
                <Text text="{data>/ultima_atualizacao}"/>
              </InputListItem>                            
            </List>
          </IconTabFilter>
         
          <IconTabFilter text="Endereço" key="endereco" iconColor="Critical">
            <List headerText="Endereço do CNPJ" >
              <InputListItem label="Logradouro:" type="Navigation">
                <Text text="{data>/logradouro}" />
              </InputListItem>
              <InputListItem label="número:" type="Navigation">
                <Text text="{data>/numero}" />
              </InputListItem>
              <InputListItem label="Bairro" type="Navigation">
                <Text text="{data>/bairro}" />
              </InputListItem>              
              <InputListItem label="Complemento:" type="Navigation">
                <Text text="{data>/complemento}" />
              </InputListItem>
              <InputListItem label="Município:" type="Navigation">
                <Text text="{data>/municipio}" />
              </InputListItem>              
              <InputListItem label="Cep:" type="Navigation">
                <Text text="{data>/cep}" />
              </InputListItem>
              <InputListItem label="UF:" type="Navigation">
                <Text text="{data>/uf}" />
              </InputListItem>              
            </List>
          </IconTabFilter>

          <IconTabFilter text="Telefone" key="telefone" iconColor="Critical">
            <List headerText="Telefone do CNPJ">
              <InputListItem label="Telefone:" type="Navigation">
                <Text text="{data>/telefone}" />
              </InputListItem>
            </List>
          </IconTabFilter>

          <IconTabFilter text="Email" key="email" iconColor="Critical">
            <List headerText="Email do CNPJ">
              <InputListItem label="Email:" type="Navigation">
                <Text text="{data>/email}" />
              </InputListItem>
            </List>
          </IconTabFilter>        
                    
          <IconTabFilter text="Atividade Principal" key="principal" iconColor="Critical">
            <List headerText="Atividade Principal do CNPJ">
              <InputListItem label="Código CNAE:" type="Navigation">
                <Text text="{data>/atividade_principal/0/code}" />
              </InputListItem>
              <InputListItem label="Descrição CNAE:" type="Navigation">
                <Text text="{data>/atividade_principal/0/text}" />
              </InputListItem>
            </List>
          </IconTabFilter>
          
          <IconTabFilter text="Atividade Secundária" key="secundario" iconColor="Critical">
            <List headerText="Atividade Secundária do CNPJ">
              <InputListItem label="Código CNAE:" type="Navigation">
                <Text text="{data>/atividades_secundarias/0/code}" />
              </InputListItem>
              <InputListItem label="Descrição CNAE:" type="Navigation">
                <Text text="{data>/atividades_secundarias/0/text}" />
              </InputListItem>
            </List>
          </IconTabFilter>

          <IconTabFilter text="Sócios" key="socios" iconColor="Critical">
            <List headerText="Sócios do CNPJ">
              <InputListItem label="Qual.:" type="Navigation">
                <Text text="{data>/qsa/0/qual}" />
              </InputListItem>
              <InputListItem label="Nome:" type="Navigation">
                <Text text="{data>/qsa/0/nome}" />
              </InputListItem>
              <InputListItem label="Qual.:" type="Navigation">
                <Text text="{data>/qsa/1/qual}" />
              </InputListItem>
              <InputListItem label="Nome:" type="Navigation">
                <Text text="{data>/qsa/1/nome}" />
              </InputListItem>
            </List>
          </IconTabFilter>

        </items>
      </IconTabBar>        
        
        <footer>
           <core:Fragment fragmentName="buscacnpj.ui5.view.Footer" type="XML" />          
        </footer>

    </Page>
</App>

</mvc:View>